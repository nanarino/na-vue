---
import { ClientRouter } from "astro:transitions"
import clover from "@/assets/clover.svg"
import "nanarinostyl"
import themeIIFE from "@holy-two/data-theme/dist/iife?url"
import iconifyIIFE from "iconify-icon/dist/iconify-icon.min?url"
import cssDoodleIIFE from "css-doodle?url"
import ThemeToggle from "@/components/ThemeToggle"
import { readFile } from "node:fs/promises"
import { Code } from "astro:components"

interface Props {
    title?: string
    github?: string
    frontmatter?: {
        title?: string
        github?: string
    }
}
const title = Astro.props.title || Astro.props.frontmatter?.title || "na-vue"
const github = Astro.props.github || Astro.props.frontmatter?.github
const base = import.meta.env.BASE_URL
const components = Astro.url.pathname.replace(RegExp(`^${base}`), "")
let code: string | undefined = void 0
if (components) {
    code = await readFile(`./src/examples/${components}.spec.vue`, {
        encoding: "utf8",
    })
}
---

<html lang="zh-TW">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="generator" content={Astro.generator} />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <link rel="icon" type="image/svg+xml" href={clover.src} />
        <ClientRouter />
        <script is:inline fetchpriority="high" src={themeIIFE}></script>
        <script is:inline src={iconifyIIFE}></script>
        <script is:inline src={cssDoodleIIFE}></script>
        <script src="@/utils/client/init"></script>
    </head>
    <body>
        <ThemeToggle client:only="vue" style="opacity: .8" />
        <slot />
        {
            code && (
                <Code
                    code={code}
                    lang="vue"
                    themes={{ dark: "min-dark", light: "min-light" }}
                />
            )
        }
        {
            github && (
                <footer class="na-layout-footer">
                    &nbsp; &nbsp; &nbsp; 由
                    <a
                        class="na-link"
                        href="https://astro.build"
                        target="_blank"
                    >
                        {Astro.generator}
                    </a>
                    構建 &nbsp;
                    <a
                        class="na-link"
                        title="github"
                        href={github}
                        target="_blank"
                    >
                        <iconify-icon
                            icon="line-md:github-twotone"
                            style="display:inline-flex"
                        />
                        <i style="font-size:0">github</i>
                    </a>
                </footer>
            )
        }
    </body>
</html>

<style>
    body {
        width: 100%;
        overflow-x: hidden;
        padding: 0;
        margin: 0;
        min-height: 100vh;

        @supports (min-height: 100dvh) {
            & {
                min-height: 100dvh;
            }
        }
    }

    footer {
        display: flex;
        gap: 0.5em;
        justify-content: center;
        align-items: center;
        line-height: var(--line-height-2);
        font-size: var(--font-size-2);
        color: rgb(var(--gray-3));
        --color-link: var(--primary-2);
        --color-link-hover: var(--primary-3);
    }
</style>
<style is:global>
    :root[data-theme="dark"] {
        pre.astro-code-themes {
            padding: 2rem;
            margin: 1rem;
            background-color: var(--shiki-dark-bg) !important;
            color: var(--shiki-dark) !important;
            .line span {
                color: var(--shiki-dark) !important;
                background-color: var(--shiki-dark-bg) !important;
                font-style: var(--shiki-dark-font-style) !important;
                font-weight: var(--shiki-dark-font-weight) !important;
                text-decoration: var(--shiki-dark-text-decoration) !important;
            }
        }
    }
</style>
